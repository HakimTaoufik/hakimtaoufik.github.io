---
import { Image } from 'astro:assets';
import HeroImage from '../assets/blog-placeholder-about.jpg';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 1120px;
				padding-top: 0;
				padding-bottom: 0;
			}
			.hero {
				display: flex;
				align-items: center;
				gap: 3em;
				min-height: calc(100vh - 200px);
			}
			.hero-text {
				flex: 1 1 0%;
				min-width: 0;
			}
			.hero-image-wrap {
				flex: 0 0 300px;
				position: relative;
			}
			.hero-image-wrap img {
				display: block;
				width: 100%;
				height: auto;
				border-radius: 12px;
			}
			.hero-image-wrap::after {
				content: '';
				position: absolute;
				inset: 0;
				border-radius: 12px;
				box-shadow: inset 0 0 26px 8px var(--bg);
				opacity: 0.45;
				pointer-events: none;
			}
			.hero-text h1 {
				font-size: 3em;
				margin-bottom: 0.2em;
				line-height: 1.1;
				color: var(--text);
			}
			.hero-text .tagline {
				font-size: 1.25em;
				color: var(--accent-muted);
				line-height: 1.5;
				margin: 0;
			}
			.nav-links {
				display: flex;
				gap: 1em;
				margin-top: 2em;
			}
			.nav-links a {
				text-decoration: none;
				font-weight: 700;
				padding: 0.65em 1.5em;
				border-radius: 6px;
				transition: all 0.2s ease;
				font-size: 0.95em;
			}
			.nav-links .primary {
				background: var(--accent);
				color: var(--bg);
			}
			.nav-links .primary:hover {
				background: var(--accent-hover);
				color: var(--bg);
			}
			.nav-links .secondary {
				border: 1px solid var(--border-light);
				color: var(--text-secondary);
				background: transparent;
			}
			.nav-links .secondary:hover {
				border-color: var(--accent);
				color: var(--accent);
			}
			@media (max-width: 720px) {
				.hero {
					flex-direction: column-reverse;
					gap: 1.5em;
					text-align: center;
				}
				.hero-image-wrap {
					flex: 0 0 auto;
					width: 180px;
				}
				.hero-text h1 {
					font-size: 2.2em;
				}
				.hero-text .tagline {
					font-size: 1.05em;
				}
				.nav-links {
					flex-direction: column;
					gap: 0.75em;
				}
				.nav-links a {
					text-align: center;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section class="hero">
				<div class="hero-text">
					<h1>Al Hakim Taoufik</h1>
					<p class="tagline">Machine Learning student at Ecole Polytechnique.</p>
					<div class="nav-links">
						<a href="/projects" class="primary">View projects</a>
						<a href="/about" class="secondary">About me</a>
					</div>
				</div>
				<div class="hero-image-wrap">
					<Image src={HeroImage} alt="Al Hakim Taoufik" width={600} height={600} />
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>
